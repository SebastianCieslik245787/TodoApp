<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/notifications_button"
    android:layout_marginTop="10dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/attachmentIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/attach_icon_add_task"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/attachmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/attachmentIcon"
        android:paddingStart="5dp"
        android:paddingEnd="70dp"
        android:textSize="13sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/add_task_background"
        />

    <ImageView
        android:id="@+id/deleteAttachmentIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>